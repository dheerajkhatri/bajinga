    <script type="text/javascript">
        	var boxOpen = 'false';
        	var previousBox = '';
        	function showDetails(what){
        		debugger;
        		var marginValue = (($("#"+what+"Heading").parent().width())/2) - (($("#"+what+"Heading span").width())/2);
        		if(boxOpen=="false") {
        			previousBox = what;
        			boxOpen = 'true';
        			$("#"+what+"Details").slideToggle();
        			$("#"+what+"Heading").animate({"margin-left": marginValue,"margin-right": '0px',}, 500, function() {});
        		}
        		else {
        			if(previousBox==what) {
        				$("#"+what+"Details").slideToggle();
        				$("#"+what+"Heading").animate({"margin-left": '0px',"margin-right": '0px',}, 500, function() {});
        				boxOpen = 'false';
        			}
        			else {
        				//close previous box
        				$("#"+previousBox+"Details").slideToggle();
        				$("#"+previousBox+"Heading").animate({"margin-left": '0px',"margin-right": '0px',}, 500, function() {});
        				//and open new one
        				$("#"+what+"Details").slideToggle();
        				$("#"+what+"Heading").animate({"margin-left": marginValue,"margin-right": '0px',}, 500, function() {});
        				//set new previous
        				previousBox=what;
        				boxOpen = 'true';
        			}
        		}
        	}
    </script>

